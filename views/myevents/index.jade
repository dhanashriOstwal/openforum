extends ../../layouts/default

block head
 title My Events

block body
 div.row
  div.col-sm-12
   div.page-header
    h1 My Events
   ul.events
    each event, i in data
     li
      strong #{event.name} - 
      &nbsp;&nbsp;
      i.fa.fa-pencil 
      a(href='/events/edit/#{event._id}') Edit
      &nbsp;&nbsp;
      i.fa.fa-trash 
      a(id = 'deleteEvent', data-delete='#{event._id}', href='#') Delete
     
